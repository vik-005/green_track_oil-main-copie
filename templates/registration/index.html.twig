{% extends "base_auth.html.twig" %}


{% block title %}{% endblock %}
{% block auth_body %}
	<div class="nk-block nk-block-middle nk-auth-body wide-xs">
		<div class="card card-bordered rounded-5 shadow-sm">
			<div class="card-inner card-inner-lg">
				{% include "_partials/auth_brand_header.html.twig" %}

				<div class="nk-block-head">
					<div class="nk-block-head-content">
						<span class="nk-block-title fw-bold" style="font-size:1rem;">Connexion</span>
						<div class="nk-block-des">
							<p>Accédez à la plateforme NoteMaster à l’aide de vos identifiant.</p>
						</div>
					</div>
				</div>

				{% for label, messages in app.flashes %}
					{% for message in messages %}
						<div data-bs-dismiss="alert" class="alert alert-dim my-2 border rounded-3 position-relative top-0 px-3 alert-fill-  rounded-0  alert-{{ label }} alert-dismissible fade show" role="alert">
							<div class="container wide-xl flex-lg-row flex-column  justify-content-lg-start justify-content-center d-flex flex-wrap align-items-center">
								<em class="icon ni ni-alert-circle m-0 me-lg-2 mb-lg-0 mb-2" style="font-size: 20px;"></em>
								<span class="m-0 text-lg-start text-center">
									{{ message }}
								</span>
							</div>
						</div>
					{% endfor %}
				{% endfor %}

				<div>
					{{ form_start(registrationForm, {'attr': {'class': 'form'}}) }}

					<div class="form-group mb-3">
						{{ form_label(registrationForm.nomutilisateur, 'Nom d\'Utilisateur', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(registrationForm.nomutilisateur, {'attr': {'class': 'form-control'}}) }}
                        <div class="text-danger">
                            {{ form_errors(registrationForm.nomutilisateur) }}
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        {{ form_label(registrationForm.prenomutilisateur, 'Prenom d\'Utilisateur', {'label_attr': {'class': 'form-label'}}) }}
						{{ form_widget(registrationForm.prenomutilisateur, {'attr': {'class': 'form-control'}}) }}
						<div class="text-danger">
							{{ form_errors(registrationForm.prenomutilisateur) }}
						</div>
					</div>
					<div class="form-group mb-3">
						{{ form_label(registrationForm.email, 'Email Address', {'label_attr': {'class': 'form-label'}}) }}
						{{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
						<div class="text-danger">
							{{ form_errors(registrationForm.email) }}
						</div>
					</div>

					<div class="form-group mb-3">
						{{ form_label(registrationForm.roles, 'Roles', {'label_attr': {'class': 'form-label'}}) }}
						{{ form_widget(registrationForm.roles, {'attr': {'class': 'form-control'}}) }}
						<div class="text-danger">
							{{ form_errors(registrationForm.roles) }}
						</div>
					</div>

					<div class="form-group mb-3">
						{{ form_label(registrationForm.password.first, 'Password', {'label_attr': {'class': 'form-label'}}) }}
						{{ form_widget(registrationForm.password.first, {'attr': {'class': 'form-control'}}) }}
						<div class="text-danger">
							{{ form_errors(registrationForm.password.first) }}
						</div>
					</div>

					<div class="form-group mb-3">
						{{ form_label(registrationForm.password.second, 'Repeat Password', {'label_attr': {'class': 'form-label'}}) }}
						{{ form_widget(registrationForm.password.second, {'attr': {'class': 'form-control'}}) }}
						<div class="text-danger">
							{{ form_errors(registrationForm.password.second) }}
						</div>
					</div>


					<div class="form-group mb-3">
						{{ form_label(registrationForm.photo, 'Profile Photo', {'label_attr': {'class': 'form-label'}}) }}
						{{ form_widget(registrationForm.photo, {'attr': {'class': 'form-control-file'}}) }}
						<div class="text-danger">
							{{ form_errors(registrationForm.photo) }}
						</div>
					</div>

					<div class="form-group mb-3">
						{{ form_label(registrationForm.datecreation, 'Date de Création', {'label_attr': {'class': 'form-label'}}) }}
						{{ form_widget(registrationForm.datecreation, {'attr': {'class': 'form-control'}}) }}
						<div class="text-danger">
							{{ form_errors(registrationForm.datecreation) }}
						</div>
					</div>


					<div class="form-group text-center">
						<button class="btn btn-primary btn-lg w-100">Register</button>
					</div>

					{{ form_end(registrationForm) }}
				</div>


			</div>
		</div>
	</div>

{% endblock %}
