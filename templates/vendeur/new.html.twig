{% extends 'base.html.twig' %}

{% block sidebar %}
{% include "_partials/sidebar/sidebar_home.html.twig" %}

{% endblock %}

{% block title %}Ajouter un vendeur{% endblock %}

{% block page_title %}
<i class="bi bi-plus-square-dotted me-2"></i>Ajouter un vendeur
{% endblock %}

{% block content %}


    <div class="container mt-5">
        <h1>Ajouter un nouveau vendeur</h1>
        	{{ form(form) }}

    </div>
{% endblock %}

{% block toto %}
        {{ form_start(form) }}
            <div class="form-group mb-3">
                {{ form_label(form.nomvendeur, 'Nom') }}
                {{ form_widget(form.nomvendeur, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.nomvendeur) }}
            </div>

            <div class="form-group mb-3">
                {{ form_label(form.typevendeur, 'Type de Vendeur') }}
                {{ form_widget(form.typevendeur, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.typevendeur) }}
            </div>
            <div class="form-group mb-3">
                {{ form_label(form.email, 'Email') }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.email) }}
            </div>

            <div class="form-group mb-3">
                {{ form_label(form.adresse, 'Adresse') }}
                {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.adresse) }}
            </div>

            <div class="form-group mb-3">
                {{ form_label(form.telephone, 'Téléphone') }}
                {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.telephone) }}
            </div>
             <div class="form-group mb-3">
                {{ form_label(form.pays, 'pays') }}
                {{ form_widget(form.pays, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.pays) }}
            </div>
            <div class="form-group mb-3">
                {{ form_label(form.ville, 'ville') }}
                {{ form_widget(form.ville, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.ville) }}
            </div>
            <div class="form-group mb-5">
                {{ form_label(form.dateCreation, 'datecreation') }}
                {{ form_widget(form.dateCreation, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.dateCreation) }}
            </div>
            

            <button type="submit" class="btn btn-success">Ajouter</button>
            <a href="{{ path('vendeur_index') }}" class="btn btn-secondary">Annuler</a>
        {{ form_end(form) }}
{% endblock %}